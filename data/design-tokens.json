{
  "meta": {
    "project": "Congreso CCE 2026",
    "source": ["data/reference/b.jpg", "data/reference/d.jpg"],
    "precision": "approx",
    "updated": "2026-01-30"
  },
  "colors": {
    "black": "#000000",
    "blackSoft": "#0A0A0A",
    "brownDeep": "#332B1A",
    "white": "#FFFFFF",
    "gold": "#D4AF37",
    "goldBright": "#E7BB70",
    "goldSoft": "#EADDA6",
    "goldDark": "#B2975B",
    "goldBronze": "#A0875C"
  },
  "gradients": {
    "heroBackground": {
      "type": "linear",
      "angle": 180,
      "stops": [
        { "color": "#000000", "position": 0 },
        { "color": "#0A0A0A", "position": 60 },
        { "color": "#332B1A", "position": 100 }
      ]
    }
  },
  "fonts": {
    "displayCondensed": {
      "family": "Druk XCond Super",
      "weight": 700,
      "style": "normal",
      "fallback": "sans-serif"
    },
    "yearTall": {
      "family": "Mango Grotesque",
      "weight": 100,
      "style": "normal",
      "fallback": "sans-serif"
    },
    "body": {
      "family": "Montserrat",
      "weight": 400,
      "style": "normal",
      "fallback": "sans-serif"
    },
    "bodyBold": {
      "family": "Montserrat",
      "weight": 600,
      "style": "normal",
      "fallback": "sans-serif"
    },
    "names": {
      "family": "Gotham Pro",
      "weight": 700,
      "style": "normal",
      "fallback": "sans-serif"
    }
  },
  "typeStyles": {
    "heroTitle": {
      "font": "displayCondensed",
      "sizePctH": 22.0,
      "lineHeight": 0.88,
      "trackingEm": -0.02,
      "case": "uppercase",
      "color": "#FFFFFF"
    },
    "heroYear": {
      "font": "yearTall",
      "sizePctH": 26.0,
      "lineHeight": 1.0,
      "trackingEm": -0.01,
      "case": "numeric",
      "color": "#EADDA6"
    },
    "heroDate": {
      "font": "bodyBold",
      "sizePctH": 3.4,
      "lineHeight": 1.1,
      "trackingEm": 0.12,
      "case": "uppercase",
      "color": "#D4AF37"
    },
    "heroTagline": {
      "font": "body",
      "sizePctH": 3.6,
      "lineHeight": 1.1,
      "trackingEm": 0.2,
      "case": "uppercase",
      "color": "#D4AF37"
    },
    "speakerName": {
      "font": "names",
      "sizePctH": 3.2,
      "lineHeight": 1.1,
      "trackingEm": 0.0,
      "case": "title",
      "color": "#FFFFFF"
    },
    "microLabel": {
      "font": "bodyBold",
      "sizePctH": 2.4,
      "lineHeight": 1.1,
      "trackingEm": 0.08,
      "case": "uppercase",
      "color": "#FFFFFF"
    }
  }
}
